{
	"name": "Switcheroo",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Setup manual redirect rules for any http request i.e pages, scripts, images etc.",
	"browser_action": {
		"default_icon": "switch-browser.png",
		"default_title": "Add switcheroo rules.",
		"default_popup": "switcheroo.html"
	},
	"permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "tabs"],
	"background": {
		"scripts": ["request.js"]
	}
}